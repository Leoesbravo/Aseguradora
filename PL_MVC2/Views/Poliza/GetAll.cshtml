@model ML.Poliza
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h2>POLIZAS</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5>Seleccione Agregar para registrar una nueva poliza.</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">

            @Html.ActionLink("Agregar", "Form", "Poliza", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <br> <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td class="hidden">IdPoliza</td>
                        <td>Poliza Nombre</td>
                        <td>Id SubPoliza</td>
                        <td>SubPoliza</td>
                        <td>Numero Poliza</td>
                        <td>Fecha Creacion Poliza</td>
                        <td>Fecha Modificación Poliza</td>
                        <td>ID Usuario</td>
                        <td>Nombre Usuario</td>
                        <td>Fecha Inicio</td>
                        <td>Fecha Fin</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Poliza poliza in Model.Polizas)
                    {
                        <tr>
                            <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Poliza", new { IdPoliza = poliza.IdPoliza })"></a></td>
                            <td class="hidden">@poliza.IdPoliza</td>
                            <td>@poliza.Nombre</td>
                            <td>@poliza.SubPoliza.IdSubPoliza</td>
                            <td>@poliza.SubPoliza.Nombre</td>
                            <td>@poliza.NumeroPoliza</td>
                            <td>@poliza.FechaCreacion</td>
                            <td>@poliza.FechaModificacion</td>
                            <td>@poliza.Usuario.IdUsuario</td>
                            <td>@poliza.Usuario.NombreCompleto</td>
                            <td>@poliza.Vigencia.FechaInicio</td>
                            <td>@poliza.Vigencia.FechaFin</td>
                            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Poliza", new { IdPoliza = poliza.IdPoliza })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

