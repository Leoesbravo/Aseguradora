@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h2>USUARIOS</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5>Seleccione Agregar para registrar un nuevo usuario.</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">

            @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
       <br> <br/>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td class="hidden">IdUsuario</td>
                        <td>Imagen</td>
                        <td>User Name</td>
                        <td>Nombre</td>
                        <td>Apellido Paterno</td>
                        <td>Apellido Materno</td>
                        <td>Email</td>
                        <td>Sexo</td>
                        <td>Telefono</td>
                        <td>Celular</td>
                        <td>CURP</td>
                        <td>Fecha de Nacimiento</td>
                        <td>Status</td>
                        <td>XML</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>
                            <td class="hidden">@usuario.IdUsuario</td>
                            <td>
                                @if (usuario.Imagen == null)
                                {
                              
                                    <img id="ImagenPreview" src="~/Images/FotoVacia.png" style=" height:50px; width:50px;" />
                                }
                                else
                                {
                                    <img id="ImagenPreview" src="data:image/jpeg;base64,@Convert.ToBase64String(usuario.Imagen)" width="50" height="50" />
                                }
                            </td>
                            <td>@usuario.UserName</td>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.ApellidoPaterno</td>
                            <td>@usuario.ApellidoMaterno</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.Sexo</td>
                            <td>@usuario.Telefono</td>
                            <td>@usuario.Celular</td>
                            <td>@usuario.Curp</td>
                            <td>@usuario.FechaNacimiento</td>
                            <td>
                                @if(usuario.Status)   
                                {
                                    <a href="@Url.Action("UpdateStatus", "Usuario", new { IdUsuario = usuario.IdUsuario })"> <img src="~/Images/ON.png" style=" height:25px; width:50px;" /></a>
                                }
                                else
                                {
                                <a href="@Url.Action("UpdateStatus", "Usuario", new { IdUsuario = usuario.IdUsuario })"> <img src="~/Images/OFF.png" style=" height:25px; width:50px;" /></a>
                                }                       
                            </td>
                            <td><a class="btn btn-info glyphicon glyphicon-download" href="@Url.Action("CrearXML", "Usuario", new { IdUsuario = usuario.IdUsuario })" ></a></td>
                            <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

